<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="viewModel"
            type="com.sdwfqin.quickseed.ui.components.ChatViewModel" />

        <variable
            name="handlers"
            type="com.sdwfqin.quickseed.ui.components.ChatHandlers" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.components.ChatActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <TextView
                android:id="@+id/chat_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="" />
        </ScrollView>

        <EditText
            android:id="@+id/toUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.toUser}" />

        <EditText
            android:id="@+id/sendMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.sendMsg}" />

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.send()}" />
    </LinearLayout>
</layout>